{
  "exclude": ["node_modules", "src/dev/**/*.ts"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
      "target": "esnext",
      "lib": ["esnext", "dom"],
      "composite": true,
      "declaration": true,
      "declarationMap": true,
      "downlevelIteration": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "useDefineForClassFields": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "sourceMap": true,
      "rootDir": "src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "dist",
      

  }
}